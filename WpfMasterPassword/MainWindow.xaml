<Window xmlns:UserControls="clr-namespace:WpfMasterPassword.UserControls"  x:Class="WpfMasterPassword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMasterPassword"
        xmlns:vm="clr-namespace:WpfMasterPassword.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=local:MainWindow_DesignTimeData}"
        Title=".NET Master Password" Height="390" Width="703" WindowStartupLocation="CenterScreen" Icon="Icon.ico">
    <Window.DataContext>
        <vm:DocumendViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Command="{Binding Open}"/>
                <MenuItem Header="_Save" Command="{Binding Save}"/>
                <MenuItem Header="Save _As" Command="{Binding SaveAs}"/>
                <MenuItem Header="_New" Command="{Binding New}"/>
            </MenuItem>
        </Menu>
        <UserControls:ConfigurationUserControl DataContext="{Binding Config}"/>
    </DockPanel>
</Window>
